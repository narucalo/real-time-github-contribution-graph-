{
  "compilerOptions": {
    "baseUrl": ".",  // Base URL set to the root of the project
    "paths": {
      "@backend/*": ["backend/*"],  // Alias for backend folder
      "@frontend/*": ["frontend/src/*"],  // Alias for frontend/src folder
      "@components/*": ["frontend/src/components/*"],  // Alias for frontend components
      "@styles/*": ["frontend/src/styles/*"],  // Alias for frontend styles
      "@utils/*": ["frontend/src/utils/*"]  // Alias for frontend utilities
    }
  },
  "include": [
    "backend/**/*",  // Include all files in the backend folder
    "frontend/src/**/*"  // Include all files in the frontend/src folder
  ],
  "exclude": [
    "node_modules",  // Exclude node_modules from being processed
    "frontend/build",  // Exclude build folder in frontend
    "backend/node_modules"  // Exclude node_modules in backend
  ]
}
